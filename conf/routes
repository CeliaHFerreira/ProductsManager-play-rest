# Routes


# Routes home
GET         /                               controllers.HomeController.index
GET         /manager                        controllers.HomeController.getManager()
POST        /manager                        controllers.HomeController.postManager(request: Request)


# Routes marcas
GET         /marcas                         controllers.BrandsController.getBrands()
POST        /marcas                         controllers.BrandsController.postBrands(request: Request)


# Routes marca
GET         /marcas/marca                   controllers.BrandController.getBrandItem(name: String)
PUT         /marcas/marca                   controllers.BrandController.putBrandItem(request: Request, name: String)
DELETE      /marcas/marca                   controllers.BrandController.deleteBrandItem(name: String)


# Routes categoria
GET         /categoria                      controllers.CategoriesController.getCategorie(name: String)
POST        /categoria                      controllers.CategoriesController.postCategorie(request: Request, name:String)
PUT         /categoria                      controllers.CategoriesController.putCategorie(request: Request, name: String)
DELETE      /categoria                      controllers.CategoriesController.deleteCategorie(name: String)


# Routes cartegoria desde una marca
GET         /marca/categoria                controllers.CategoriesController.getCategorie(name: String)
POST        /marca/categoria                controllers.CategoriesController.postCategorie(request: Request, name:String)
PUT         /marca/categoria                controllers.CategoriesController.putCategorie(request: Request, name: String)
DELETE      /marca/categoria                controllers.CategoriesController.deleteCategorie(name: String)


# Routes producto desde marca
GET         /marca/producto                 controllers.ProductController.getProductItem(name: String)
PUT         /marca/producto                 controllers.ProductController.putProductItem(request: Request, name: String)
DELETE      /marca/producto                 controllers.ProductController.deleteProductItem(name: String)

# Routes producto desde categoria
GET         /categoria/producto             controllers.ProductController.getProductItem(name: String)
PUT         /categoria/producto             controllers.ProductController.putProductItem(request: Request, name: String)
DELETE      /categoria/producto             controllers.ProductController.deleteProductItem(name: String)




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Routes


# Routes home
GET         /                               controllers.HomeController.index
GET         /manager                        controllers.HomeController.getManager()
POST        /manager                        controllers.HomeController.postManager(request: Request)


# Routes marcas
GET         /marcas                         controllers.BrandsController.getBrands()
POST        /marcas                         controllers.BrandsController.postBrands(request: Request)


# Routes marca
GET         /marcas/marca                   controllers.BrandController.getBrandItem(name: String)
PUT         /marcas/marca                   controllers.BrandController.putBrandItem(request: Request, name: String)
DELETE      /marcas/marca                   controllers.BrandController.deleteBrandItem(name: String)


# Routes categoria
GET         /categoria                      controllers.CategoriesController.index
POST        /categoria                      controllers.CategoriesController.index
PUT         /categoria                      controllers.CategoriesController.index
DELETE      /categoria                      controllers.CategoriesController.index


# Routes cartegoria desde una marca
GET         /marca/categoria                controllers.CategoriesController.index
POST        /marca/categoria                controllers.CategoriesController.index
PUT         /marca/categoria                controllers.CategoriesController.index
DELETE      /marca/categoria                controllers.CategoriesController.index


# Routes producto desde marca
GET         /marca/producto                 controllers.ProductController.index
PUT         /marca/producto                 controllers.ProductController.index
DELETE      /marca/producto                 controllers.ProductController.index

# Routes producto desde categoria
GET         /categoria/producto             controllers.ProductController.index
PUT         /categoria/producto             controllers.ProductController.index
DELETE      /categoria/producto             controllers.ProductController.index




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
